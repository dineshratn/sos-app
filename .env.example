# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL Database Settings
POSTGRES_USER=sos_user
POSTGRES_PASSWORD=sos_password
POSTGRES_DB=sos_db
POSTGRES_PORT=5432

# MongoDB Database Settings
MONGO_USER=admin
MONGO_PASSWORD=admin_password
MONGO_DB=sos_db
MONGO_PORT=27017

# ==================== CACHE & QUEUE ====================
# Redis Configuration
REDIS_PORT=6379

# Kafka Configuration
KAFKA_PORT=9092

# ==================== APPLICATION SETTINGS ====================
# Environment and Logging
NODE_ENV=development
LOG_LEVEL=debug

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-12345
JWT_EXPIRY=24h

# ==================== SERVICE URLS ====================
# These are used by services to communicate with each other
API_GATEWAY_URL=http://api-gateway:3000
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
COMMUNICATION_SERVICE_URL=http://communication-service:3003
MEDICAL_SERVICE_URL=http://medical-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005
DEVICE_SERVICE_URL=http://device-service:3006
LOCATION_SERVICE_URL=http://location-service:3007
EMERGENCY_SERVICE_URL=http://emergency-service:3008
LLM_SERVICE_URL=http://llm-service:3009

# ==================== EXTERNAL SERVICE KEYS ====================
# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# SendGrid Configuration (for email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@sosapp.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# ==================== AWS CONFIGURATION ====================
# AWS S3 for Media Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=sos-app-media
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# ==================== DEBUG SETTINGS ====================
# Enable debug mode for specific services (comma-separated)
DEBUG=sos:*

# Node.js debugging
NODE_DEBUG=http,cluster,net

# Enable verbose logging for troubleshooting
VERBOSE_LOGGING=false

# ==================== SECURITY SETTINGS ====================
# CORS Settings
CORS_ORIGIN=http://localhost:3010,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== FEATURE FLAGS ====================
# Feature toggles
ENABLE_MFA=true
ENABLE_OAUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
