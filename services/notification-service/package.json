{
  "name": "@sos-app/notification-service",
  "version": "1.0.0",
  "description": "Multi-channel notification service for SOS App emergency alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "notification",
    "emergency",
    "push",
    "sms",
    "email"
  ],
  "author": "SOS App Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "mongoose": "^8.0.0",
    "bull": "^4.11.5",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "firebase-admin": "^13.6.0",
    "@parse/node-apn": "^6.0.0",
    "twilio": "^4.19.0",
    "@sendgrid/mail": "^8.1.6",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "joi": "^18.0.1",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^8.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "jest": "^30.2.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
