# Server Configuration
PORT=3005
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sos_notifications
MONGODB_MAX_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=notification-service
KAFKA_GROUP_ID=notification-service-group
KAFKA_TOPICS_EMERGENCY_CREATED=emergency-created
KAFKA_TOPICS_ESCALATION=emergency-escalation

# Firebase Cloud Messaging (FCM) Configuration
FCM_PROJECT_ID=your-project-id
FCM_PRIVATE_KEY=your-private-key
FCM_CLIENT_EMAIL=your-client-email

# Apple Push Notification (APNs) Configuration
APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
APNS_KEY_PATH=./certs/AuthKey.p8
APNS_PRODUCTION=false

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email Configuration
SENDGRID_API_KEY=your-api-key
SENDGRID_FROM_EMAIL=alerts@sos-app.com
SENDGRID_FROM_NAME=SOS App Emergency Alerts

# Notification Configuration
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_BACKOFF_MULTIPLIER=2
NOTIFICATION_INITIAL_RETRY_DELAY=5000
NOTIFICATION_MAX_RETRY_DELAY=45000
NOTIFICATION_ESCALATION_TIMEOUT=120000
NOTIFICATION_FOLLOWUP_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
