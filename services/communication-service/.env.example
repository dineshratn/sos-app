# Server Configuration
PORT=3003
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/sos_app_communication
MONGODB_MAX_POOL_SIZE=50

# Redis Configuration (for Socket.IO adapter)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=communication-service
KAFKA_GROUP_ID=communication-service-group

# JWT Configuration
JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem
JWT_ALGORITHM=RS256

# AWS S3 Configuration (for media uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=sos-app-media
AWS_S3_SIGNED_URL_EXPIRY=3600

# Google Cloud Speech-to-Text Configuration
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=./keys/google-cloud-service-account.json

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Message Settings
MAX_MESSAGE_LENGTH=5000
MAX_MEDIA_FILE_SIZE=52428800
MESSAGE_RETENTION_DAYS=90
