# SOS App - Environment Configuration Template
# Copy this file to .env and update values

# ==================== Security ====================
JWT_SECRET=your-jwt-secret-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production

# ==================== Database Passwords ====================
POSTGRES_PASSWORD=postgres123
MONGODB_PASSWORD=mongo123
REDIS_PASSWORD=redis123

# ==================== OAuth Configuration ====================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Apple Sign In
APPLE_CLIENT_ID=com.yourapp.service
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID
APPLE_PRIVATE_KEY_PATH=./keys/AuthKey_XXXXX.p8
APPLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/apple/callback

# ==================== External Services ====================
# Email Service (e.g., SendGrid)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@sosapp.com

# SMS Service (e.g., Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (FCM)
FCM_SERVER_KEY=your-fcm-server-key

# ==================== Development ====================
NODE_ENV=development
LOG_LEVEL=debug

# ==================== Production ====================
# NODE_ENV=production
# LOG_LEVEL=info
