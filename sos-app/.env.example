# SOS App - Environment Variables Example
# Copy this to .env and update with your values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=sos_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=24h

# Encryption (Medical Service)
ENCRYPTION_SECRET_KEY=your-encryption-key-must-be-32-chars
ENCRYPTION_KEY_ID=prod-key-001

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Docker Registry (optional)
DOCKER_REGISTRY=sos-app

# Version Tag
VERSION=v1.0.0

# Optional: OAuth Providers (Auth Service)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Optional: Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Monitoring
SENTRY_DSN=your-sentry-dsn
