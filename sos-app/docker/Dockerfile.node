FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Expose port (will be overridden by docker-compose)
EXPOSE 3000

# Default command (will be overridden by docker-compose)
CMD ["npm", "start"]
