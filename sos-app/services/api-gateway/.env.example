# Environment
NODE_ENV=development
SERVICE_NAME=api-gateway
PORT=3000

# Microservice URLs
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
EMERGENCY_SERVICE_URL=http://emergency-service:3003
LOCATION_SERVICE_URL=http://location-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005
COMMUNICATION_SERVICE_URL=http://communication-service:3006
LLM_SERVICE_URL=http://llm-service:3007

# Service Timeouts (milliseconds)
AUTH_SERVICE_TIMEOUT=10000
USER_SERVICE_TIMEOUT=10000
EMERGENCY_SERVICE_TIMEOUT=10000
LOCATION_SERVICE_TIMEOUT=10000
NOTIFICATION_SERVICE_TIMEOUT=10000
COMMUNICATION_SERVICE_TIMEOUT=10000
LLM_SERVICE_TIMEOUT=30000

# Service Retries
AUTH_SERVICE_RETRIES=3
USER_SERVICE_RETRIES=3
EMERGENCY_SERVICE_RETRIES=3
LOCATION_SERVICE_RETRIES=3
NOTIFICATION_SERVICE_RETRIES=3
COMMUNICATION_SERVICE_RETRIES=3
LLM_SERVICE_RETRIES=2

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=15m

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Timeout Configuration
DEFAULT_TIMEOUT=30000
UPLOAD_TIMEOUT=300000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
