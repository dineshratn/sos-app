{
  "name": "@sos-app/user-service",
  "version": "1.0.0",
  "description": "SOS App User Service - User profiles and emergency contacts management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate:up": "ts-node src/db/migrate.ts up",
    "migrate:down": "ts-node src/db/migrate.ts down",
    "migrate:create": "ts-node src/db/migrate.ts create",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.6",
    "dotenv": "^17.2.3",
    "winston": "^3.11.0",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.2",
    "uuid": "^13.0.0",
    "libphonenumber-js": "^1.12.26"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
